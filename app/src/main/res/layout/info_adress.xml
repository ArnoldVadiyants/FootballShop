<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/info_adress_scrollView">  <LinearLayout
                  xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_mapButton"
        android:text="г. Харьков, ул. Полевая 44."
        android:textSize="22dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Здание Спортивно-Оздоровительного центра &quot;Профи&quot;."
        android:id="@+id/textView13"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Вход с левого торца здания, второй этаж, направо, первая дверь (следуйте указателям)"
        android:id="@+id/textView12"
        android:layout_weight="1"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="\@null"
        android:scaleType="centerCrop"
        android:src="@drawable/office_1"
        android:id="@+id/imageView2"
        android:layout_weight="1"
        android:scrollIndicators="end"
        android:clickable="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/office_2"
        android:id="@+id/imageView3"
        android:layout_weight="1"
        android:clickable="true"/>

</LinearLayout>
</ScrollView>